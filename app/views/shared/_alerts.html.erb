<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "BMF", sticky: false, time: 2000, image: :warining) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "BMF",sticky: false, time: 2000, image: :error) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: "BMF", sticky: false, time: 2000, image: :success) %>
<% end %>
